<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.extoix.android.spotify.ArtistFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/elvis" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/list_item_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Item Artist Name"/>

        <TextView
            android:id="@+id/list_item_artist_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Item Artist Track"/>

    </LinearLayout>

</LinearLayout>